{
  "name": "watchtogether",
  "version": "1.0.0",
  "description": "Real-time YouTube sync platform with chat",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "npm install && cd server && npm install",
    "start": "node index.js",
    "vercel-build": "cd client && npm ci && npm run build"
  },
  "keywords": [
    "youtube",
    "sync",
    "chat",
    "realtime"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
